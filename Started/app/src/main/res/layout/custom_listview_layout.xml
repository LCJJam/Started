<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:layout_height="30dp" android:layout_width="100dp" android:layout_marginTop="15dp" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:text="TextView" android:id="@+id/textView_name"/>

    <TextView android:layout_height="60dp" android:layout_width="wrap_content" android:layout_marginTop="10dp" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:text="TextView" android:id="@+id/textView_content" android:layout_alignParentEnd="true" android:layout_alignParentRight="true" android:layout_below="@+id/textView_name"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="TextView" android:id="@+id/textView_date" android:layout_alignTop="@+id/textView_name" android:layout_toEndOf="@+id/textView_name" android:layout_toRightOf="@+id/textView_name" android:layout_alignBottom="@+id/textView_name" android:layout_marginStart="93dp" android:layout_marginLeft="93dp"/>

